<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.verver.chilab">

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Deprecated! Use MainActivity with a RectPuzzleFragment instead! -->
        <activity android:name=".RectPuzzleActivity" android:exported="true"/>

        <!-- Deprecated! Use MainPuzzleActivity with a HexPuzzleFragment instead! -->
        <activity android:name=".HexPuzzleActivity" android:exported="true"/>
    </application>

</manifest>